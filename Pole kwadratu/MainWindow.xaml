<Window x:Class="Pole_kwadratu.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Kwadrat" Height="400" Width="800">
    <Grid>
        <Label Content="Bok Kwadratu:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="txtBok" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10,0,0" Width="100"/>
        <Label Content="Obwód:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox x:Name="txtObwod" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,40,0,0" Width="100" IsReadOnly="True"/>
        <Label Content="Pole:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox x:Name="txtPole" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,70,0,0" Width="100" IsReadOnly="True"/>
        <Button Content="Oblicz" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" Width="75" Click="ObliczClick"/>
        <Button Content="Wyczysc" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Width="75" Click="WyczyscClick"/>
    </Grid>
</Window>
